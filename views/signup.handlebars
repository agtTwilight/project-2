<link rel="stylesheet" href="/css/signup.css">

<section id="login" class="tavern row justify-content-evenly">
        <section id="log-container" class="col-3 home-box">
                <img id= "log-background" src="../assets/log-banner-pixel.png" alt="pixel-banner">
                <h1 class="log-header">GLOBAL</h1>
                <section id="logs">
                        <ul id="log-items">
                        <li>{{userAchievements.text}}</li>

                        </ul>
                </section>
        </section>
        <section class="input-box col-8 blur nes-container is-rounded">
                <h2>Create An Account</h2>
                        <form id="signup-form">
                        <div class="row mb-3 d-flex justify-content-center">
                                <div class="col-sm-10 nes-field">
                                        <input type="text" class="form-control nes-input" id="signup-username" placeholder="Username">
                                </div>
                        </div>
                        <div class="row mb-3 d-flex justify-content-center">
                                <div class="col-sm-10 nes-field">
                                        <input type="text" class="form-control nes-input" id="signup-character-name" placeholder="Character Name">
                                </div>
                        </div>
                        <div class="row mb-3 d-flex justify-content-center">
                                <div class="col-sm-10 nes-field">
                                        <input type="password" class="form-control nes-input" id="signup-password" placeholder="Password">
                                </div>
                        </div>
                        <div class="d-flex justify-content-center">
                                <button id="signup-btn" type="submit" class="btn btn-secondary nes-btn is-error">Continue</button>
                        </div>
                        </form>
        </section>
</section>

